@{
    ViewData["Title"] = "Home Page";
}

<div class="limiter">
		<div class="container-login100" style="background-image: url('images/bg-01.jpg');">
			<div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
				<form action="#" method="post" class="login100-form validate-form flex-sb flex-w">
					<span class="login100-form-title ">
						Add Employee
					</span>
					
					<div class="p-t-31 p-b-9">
						<span class="txt1">
							First Name
						</span>
					</div>
					<div class="wrap-input100 validate-input" data-validate = "Username is required">
						<input class="input100" type="text" name="fname" id="fname" >
						<span class="focus-input100"></span>
					</div>

					<div class="p-t-31 p-b-9">
						<span class="txt1">
							Last Name
						</span>
					</div>
					<div class="wrap-input100 validate-input" data-validate = "Username is required">
						<input class="input100" type="text" name="lname" id="lname" >
						<span class="focus-input100"></span>
					</div>
					
					<div class="p-t-13 p-b-9">
						<span class="txt1">
							Mobile Number
						</span>
					</div>
					<div class="wrap-input100 validate-input" data-validate = "mobileNumber is required">
						<input class="input100" type="text" id="mobileNumber"  name="mobileNumber" >
						<span class="focus-input100"></span>
					</div>


					<div class="p-t-31 p-b-9">
						<span class="txt1">
							Salary
						</span>
					</div>
					<div class="wrap-input100 validate-input" data-validate = "Email is required">
						<input class="input100" type="text" name="salary" id="salary">
						<span class="focus-input100"></span>
					</div>

					<div class="p-t-31 p-b-9">
						<span class="txt1">
							Address
						</span>
					</div>
					<div class="wrap-input100 validate-input" data-validate = "Address is required">
						<input class="input100" type="text" name="address" id="address" >
						<span class="focus-input100"></span>
					</div>
					


					<div class="container-login100-form-btn m-t-17">
						<button class="login100-form-btn" onclick="send()">
							Add
						</button>
					</div>
@*					<input type="button" value="send" onclick="send()"/>
*@					
				</form>
			</div>
		</div>
</div>
	


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>

    <script>
        con = new signalR.HubConnectionBuilder().withUrl("/employee").build()

        con.start();

        //con.on("newemp", function(n,s){
        //    var item =document.createElement("li");
        //    item.appendChild(document.createTextNode(n+":"+s));
        //    document.getElementById("ul").appendChild(item);
        //});

        function send(){
            con.invoke("sendemployee",
                document.getElementById("fname").value,
				document.getElementById("lname").value,
				document.getElementById("mobileNumber").value,
                document.getElementById("salary").value,
				document.getElementById("address").value
            )
        }


    </script>
}